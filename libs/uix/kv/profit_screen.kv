<ProfitScreen>:
    id: main_win
    orientation: "vertical"

    MDScreenManager:
        id: scrn_mngr

        MDScreen:
            id: home_scrn
            name: "home_scrn"

            MDBoxLayout:
                spacing: 20
                orientation: 'vertical'

                MDBoxLayout:
                    padding: 50, 0
                    adaptive_height: True
                    MDTextField:
                        id: search_fld
                        hint_text: "Search"
                        mode: "rectangle"
                        icon_left: "magnify"
                        on_text:
                            root.on_search(self.text)

                ScrollView:
                    MDGridLayout:
                        id: item_list
                        cols: 1
                        spacing: 50
                        padding: 50, 50
                        adaptive_height: True

        MDScreen:
            id: profit_scrn
            name: "profit_scrn"

            MDBoxLayout:
                id: profit_card
                orientation: "vertical"
                padding: 50, 20
